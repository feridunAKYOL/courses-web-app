<h1 class="text-center mb-3">{{title}}</h1>

<div class="row">

  <div class="col-6">
    <form action="/api/courses" method="POST" class="mb-4">
      <div class="form-group">
        <label for="name">Course Name</label>
        <input type="text" name="name" class="form-control">
        <input type="submit" value="Add Course" class="btn btn-info btn-block mt-3">
      </div>
    </form>
    <form action="/api/courses" method="POST" class="mb-4">
      <div class="form-group">
        <label for="name">Course ID</label>
        <input type="number" name="id" class="form-control">
        <input type="submit" value="DELETE COURSE" class="btn btn-danger btn-block mt-3">
      </div>
    </form>
    <form action="/api/courses" method="POST" class="mb-4">
      <div class="form-group">
        <label for="name">Course ID</label>
        <input type="number" name="id" class="form-control">
        <input type="submit" value="CHANGE COURSE" class="btn btn-primary btn-block mt-3">
      </div>
    </form>
  </div>

  <div class="col-6">
    <h4>Courses</h4>
    <ul class="list-group">
      {{#each courses}}
      <li class="list-group-item">{{this.id}}: {{this.name}}</li>
      {{/each}}
    </ul>
    
    <a href="/api/courses" class="btn btn-light mt-4">Visit API</a>
    
  </div> 
</div>










